{
  "name": "icl-calc",
  "version": "1.7.0",
  "author": "Rui Pinge",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:ruipinge/icl-calc.git"
  },
  "homepage": "http://ruipinge.github.io/icl-calc",
  "bugs": {
    "url": "https://github.com/ruipinge/icl-calc/issues"
  },
  "dependencies": {
    "@amcharts/amcharts4": "^4.10.17",
    "@semantic-release/git": "^9.0.1",
    "@sentry/react": "^6.15.0",
    "@sentry/tracing": "^6.15.0",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.37",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-test-renderer": "^17.0.1",
    "bootstrap": "^4.6.1",
    "date-fns": "^2.27.0",
    "eslint-plugin-prettier": "^3.4.1",
    "formik": "^2.2.9",
    "prettier": "^2.5.0",
    "raw.macro": "^0.4.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.44.0",
    "semantic-release": "^17.4.7",
    "typescript": "^4.5.2",
    "web-vitals": "^1.1.2",
    "yup": "^0.32.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "REACT_APP_VERSION=0.0.t react-scripts test --coverage",
    "eject": "react-scripts eject",
    "clean": "rm -rf ./node_modules ./coverage ./npm-debug.log ./build",
    "format": "prettier --write './src/**.{js,jsx,ts,tsx}'",
    "lint": "eslint src/",
    "semantic-release": "semantic-release"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "sort-imports": [
        "error",
        {
          "ignoreCase": false,
          "ignoreDeclarationSort": false,
          "ignoreMemberSort": false,
          "memberSyntaxSortOrder": [
            "none",
            "all",
            "multiple",
            "single"
          ],
          "allowSeparatedGroups": false
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/",
      "<rootDir>/src/index.tsx",
      "<rootDir>/src/normality/Histogram.tsx",
      "<rootDir>/src/normality/index.tsx",
      "<rootDir>/src/normality/linear-gauge/index.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "transformIgnorePatterns": [
      "node_modules[/\\\\](?!@amcharts[/\\\\]amcharts4)"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "singleQuote": true,
    "printWidth": 80
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "assets": []
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
